  {% set bg_url = file_url(node.field_background_image.entity.uri.value) %}
  {% include theme_path_no_base ~ "/tpl/header.html.twig" %}
  {# sidebar #}
  {% set blog_sidebar = node.field_default_sidebar.0.value %}
  {% if blog_sidebar == '' %}
    {% set blog_sidebar = 'right' %}
  {% endif %}
  <div class="layout">
    
    <!-- Home -->
    
    <main class="main main-inner main-blog bg-blog"{% if node.field_background_image.entity.uri.value %} style="background-image: url({{ bg_url }})"{% endif %} data-stellar-background-ratio="0.6">
      <div class="container">
        <header class="main-header">
          <h1>{{ title }}</h1>
        </header>
      </div>

      <!-- Lines -->

      <div class="page-lines">
        <div class="container">
          <div class="col-line col-xs-4">
            <div class="line"></div>
          </div>
          <div class="col-line col-xs-4">
            <div class="line"></div>
          </div>
          <div class="col-line col-xs-4">
            <div class="line"></div>
            <div class="line"></div>
          </div>
        </div>
      </div>
    </main>

    <div class="content">   
    
      <!-- Blog Details -->

      <section class="blog-details">
        <div class="container">
          {{ page.content_full_bar }}
          <div class="row">
            {% if blog_sidebar == 'left' %}
            <div class="col-secondary col-md-4">
              {{ page.sidebar }}
            </div>
            {% endif %}
            {% if blog_sidebar != 'none' %}
            <div class="col-primary col-md-8">
            {% else %}
            <div class="col-primary col-md-12">
            {% endif %}
              {{ page.content }}
            </div>
            {% if blog_sidebar == 'right' %}
            <div class="col-secondary col-md-4">
              {{ page.sidebar }}
            </div>
            {% endif %}
          </div>
        </div>
      </section>

      {% include theme_path_no_base ~ "/tpl/footer.html.twig" %}

      
    </div>
  </div>