{% include theme_path_no_base ~ "/tpl/header.html.twig" %}

<div class="layout">
    
    <!-- Home -->
    
    <main class="main main-inner main-contacts bg-contacts"{% if other_page_bg_image %} style="background-image:url({{ other_page_bg_image }});"{% endif %} data-stellar-background-ratio="0.6">
      <div class="container">
        <header class="main-header">
          <h1>{{ title }}</h1>
        </header>
      </div>

      <!-- Lines -->

      <div class="page-lines">
        <div class="container">
          <div class="col-line col-xs-4">
            <div class="line"></div>
          </div>
          <div class="col-line col-xs-4">
            <div class="line"></div>
          </div>
          <div class="col-line col-xs-4">
            <div class="line"></div>
            <div class="line"></div>
          </div>
        </div>
      </div>
    </main>
    {{ page.content_full_bar }}
    <div class="content">   
      <section class="contact-details">
        <div class="col-map col-md-7">
          <div id="map" data-latitude="{{ latitude }}" data-longitude="{{ longitude }}" class="gmap col-md-7"></div>
        </div>
        <div class="contact-info col-md-5 col-md-offset-7">
          <div class="contact-info-content">
            <div class="contact-info-title">{{ 'Contacts'|t }}</div>
            {% if contact_phone %}
            <div class="phone contact-row">
              <i class="fa fa-phone"></i> 
              <div class="contact-body">
                <h4>{{ 'Phone'|t }}</h4>
                {{ contact_phone|t }}
              </div>
            </div>
            {% endif %}
            {% if contact_email %}
            <div class="contact-row">
              <i class="fa fa-envelope"></i> 

              <div class="contact-body">
                <h4>{{ 'Email'|t }}</h4>
                <div class="contact-content">{{ contact_email }}</div>
              </div>
            </div>
            {% endif %}
            {% if contact_address %}
            <div class="contact-row">
              <i class="fa fa-map-marker"></i> 
              <div class="contact-body">
                <h4>{{ 'Address'|t }}</h4>
                <div class="contact-content">{{ contact_address }}</div>
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      </section>
          
      {{ page.section_content }}
      <section class="section">

        <div class="container">

          <header class="section-header">
            <h2 class="section-title">{{ 'Get'|t }} <span class="text-primary">{{ 'in touch'|t }}</span></h2>

          </header>

          <div class="section-content">
            <div class="row-base row">
                
                {{ page.address_in_contact_block }}
              
                <div class="col-base col-md-8 arch-form-contact">
                  {{ page.content }}
                </div>
              </div>
          </div>
        </div>
      </section>
      {% include theme_path_no_base ~ "/tpl/footer.html.twig" %}
    </div>
</div>